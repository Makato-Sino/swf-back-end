<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sysu.swfbackend.dao.UserDao">

    <select id="getAllUsers" resultType="com.sysu.swfbackend.bean.User">
        SELECT * FROM user
        <if test = "username != null">
            WHERE username LIKE #{username}
        </if>
        LIMIT #{pageStart}, #{pageSize}
    </select>

    <select id="getUsersCounts" resultType="java.lang.Integer">
        SELECT count(*) FROM user
        <if test="username != null">
            WHERE username LIKE #{username}
        </if>
    </select>

    <insert id="addUser">
        INSERT INTO user (name,address,username,password,roles)
        VALUE (#{name},#{address},#{username},#{password},#{roles})
    </insert>

    <delete id="deleteUser">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <select id="getUpdateUser" resultType="com.sysu.swfbackend.bean.User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <update id="editUser">
        UPDATE user SET name = #{name}, address = #{address}, username = #{username}, password = #{password}, roles = #{roles} WHERE id = #{id}
    </update>
</mapper>